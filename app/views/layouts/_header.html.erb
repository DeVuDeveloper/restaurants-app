<%= nav_bar static: :top, :responsive => true do %>
  <%= menu_group :pull => :left do %>
    <%= menu_item "Home", root_path %>
    <%= menu_item "Restaurants", restaurants_path %>
    <%= menu_item "Friends", users_friendships_path if current_user && current_user.guest? %>
    <%= menu_item "Managers", managers_path if current_user && current_user.admin? %>
    <%= menu_item "Visits", users_reviews_path if current_user && current_user.guest? %>
    <%= menu_item "Invitations", guest_invitations_path(current_user) if current_user && current_user.guest? %>
  <% end %>
  <%= menu_group :pull => :right do %>

    <% if current_user %>
      <%= menu_item "Add manager", new_manager_path if current_user.admin? %>
      <%= menu_item "My profile", guest_path(current_user) if current_user.guest? %>
    <% end %>

  <% end %>
<% end %>
